{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "arrow-body-style": ["error", "as-needed"]
    },
    "overrides": [
       {
           "files": ["*.test.js"],
           "rules": {
               "no-unused-expressions": "off",
               "no-unused-vars": "off"
           }
       }
   ]
}
